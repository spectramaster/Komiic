<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Komiic.Views.HeaderView"
    x:DataType="viewModels:HeaderViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:material="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:materialEnums="clr-namespace:Material.Icons;assembly=Material.Icons"
    xmlns:markups="clr-namespace:Komiic.MarkupExtensions"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:Komiic.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DockPanel Margin="0,0,10,0">
        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
            <Image
                IsVisible="{OnFormFactor Default=True,
                                         Mobile=False}"
                Margin="10,0"
                PointerReleased="InputElement_OnPointerReleased"
                Source="{StaticResource IconImage}"
                Width="100" />
            <HyperlinkButton Content=" 贊助 " NavigateUri="https://donate.komiic.com/" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
            <Button Margin="0,0,4,0">
                <material:MaterialIcon Kind="Magnify" />
            </Button>
            <StackPanel IsVisible="{Binding AccountData, Converter={x:Static ObjectConverters.IsNull}}"
                        Orientation="Horizontal">
                <Button
                    Command="{Binding OpenLoginCommand}"
                    Content="登入"
                    Foreground="{DynamicResource AccentBrush}" />
                <TextBlock Text="/" VerticalAlignment="Center" />
                <HyperlinkButton
                    Content="註冊"
                    Foreground="{DynamicResource AccentBrush}"
                    NavigateUri="https://komiic.com/register/" />
            </StackPanel>
            <StackPanel IsVisible="{Binding AccountData, Converter={x:Static ObjectConverters.IsNotNull}}"
                        Orientation="Horizontal">
                <DropDownButton Background="Transparent" Padding="0">
                    <DropDownButton.Content>
                        <StackPanel Margin="0,0,10,0" Orientation="Horizontal">
                            <Border
                                Background="{Binding AccountData.ProfileBackgroundColor, FallbackValue=#000000}"
                                CornerRadius="13"
                                MinHeight="24"
                                Width="{Binding $self.Bounds.Height}">
                                <Border.Margin>
                                    <OnFormFactor Default="0,0,10,0" Mobile="0" />
                                </Border.Margin>
                                <Viewbox>
                                    <TextBlock
                                        FontSize="24"
                                        Foreground="{Binding AccountData.ProfileTextColor, FallbackValue=#000000}"
                                        HorizontalAlignment="Center"
                                        Margin="2"
                                        Text="{Binding AccountData.ProfileText, FallbackValue='無'}"
                                        VerticalAlignment="Center" />
                                </Viewbox>
                            </Border>
                            <Viewbox IsVisible="{OnFormFactor Default=True, Mobile=False}">
                                <TextBlock
                                    FontSize="22"
                                    Text="{Binding AccountData.Nickname, FallbackValue='未登入'}"
                                    VerticalAlignment="Center" />
                            </Viewbox>
                        </StackPanel>
                    </DropDownButton.Content>
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom" ShowMode="Standard">
                            <MenuItem
                                Command="{Binding OpenAccountInfoCommand}"
                                Header="我的賬戶"
                                Padding="5,10" />
                            <MenuItem
                                Command="{Binding LogoutCommand}"
                                Header="登出"
                                Padding="5,10" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
            <DropDownButton Background="Transparent" Padding="0">
                <DropDownButton.Content>
                    <material:MaterialIcon x:Name="ThemeIcon" Kind="ThemeLightDark">
                        <Interaction.Behaviors>
                            <DataTriggerBehavior Binding="{Binding SelectedThemeMode}"
                                                 ComparisonCondition="Equal" Value="Auto">
                                <ChangePropertyAction TargetObject="ThemeIcon" PropertyName="Kind"
                                                      Value="{x:Static materialEnums:MaterialIconKind.ThemeLightDark}" />
                            </DataTriggerBehavior>
                            <DataTriggerBehavior Binding="{Binding SelectedThemeMode}"
                                                 ComparisonCondition="Equal" Value="Light">
                                <ChangePropertyAction TargetObject="ThemeIcon" PropertyName="Kind"
                                                      Value="{x:Static materialEnums:MaterialIconKind.WeatherSunny}" />
                            </DataTriggerBehavior>
                            <DataTriggerBehavior Binding="{Binding SelectedThemeMode}"
                                                 ComparisonCondition="Equal" Value="Dark">
                                <ChangePropertyAction TargetObject="ThemeIcon" PropertyName="Kind"
                                                      Value="{x:Static materialEnums:MaterialIconKind.WeatherNight}" />
                            </DataTriggerBehavior>
                        </Interaction.Behaviors>
                    </material:MaterialIcon>
                </DropDownButton.Content>
                <DropDownButton.Flyout>
                    <MenuFlyout Placement="Bottom" ShowMode="Standard">
                        <MenuItem Header="跟隨系統" Command="{Binding SetThemeAutoCommand}">
                            <MenuItem.Icon>
                                <material:MaterialIcon Kind="Check" IsVisible="{Binding IsThemeAuto}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="淺色" Command="{Binding SetThemeLightCommand}">
                            <MenuItem.Icon>
                                <material:MaterialIcon Kind="Check" IsVisible="{Binding IsThemeLight}" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="深色" Command="{Binding SetThemeDarkCommand}">
                            <MenuItem.Icon>
                                <material:MaterialIcon Kind="Check" IsVisible="{Binding IsThemeDark}" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuFlyout>
                </DropDownButton.Flyout>
            </DropDownButton>

            <!-- 語言切換已移除，默認繁體中文 -->
        </StackPanel>

        <StackPanel
            HorizontalAlignment="Center"
            IsHitTestVisible="False"
            Orientation="Horizontal"
            VerticalAlignment="Center">
            <TextBlock
                HorizontalAlignment="Center"
                Text="{Binding ImageLimit.Usage}"
                TextAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="/"
                TextAlignment="Center"
                VerticalAlignment="Center" />
            <TextBlock
                HorizontalAlignment="Center"
                Text="{Binding ImageLimit.Limit}"
                TextAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>
    </DockPanel>
</UserControl>
